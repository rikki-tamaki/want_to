<% bookmarks.each do |bookmark| %>
<tr id="no<%= bookmark.id.to_s %>">
    <td>
        <%= link_to bookmark.smid, { :controller => 'home', :action => 'movie', :id => bookmark.smid }, :data => { :'no-turbolink' => '1' }, :class => 'bookmark'  %>
    </td>
    <%= form_tag({:controller => 'my_page', :action => 'update'}, :id => 'update-fusen') do %>
    <td class="Editable" input type="text" name="vpos_time">
        <%= vpos_to_h_mm_ss(bookmark.start_vpos) %>        
    </td>
    <td class="Editable" input type="text" name="comment">
        <%= bookmark.comment %>
    </td>
    <td>
        <input class="Edit" type="submit" value="登録！" >
    </td>
    <% end %>
</tr>

<% end %>

<% for bookmarks in @bookmark %>
  <% bookmarks_for bookmark, :index => bookmark.id do |field| %>
    <tr>
      <td><%= bookmark.text_field :s_to_h_mm_ss(bookmark.start_vpos) %></td>
      <td><%= bookmark.text_field :bookmark.comment %></td>
    </tr>
  <% end %>
  <p><%= submit_tag "一括更新" %></p>
<% end %>
